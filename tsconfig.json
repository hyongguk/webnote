{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop":true,
        "allowSyntheticDefaultImports": true,
        "target":"ES2019",
        "noImplicitAny": true,
        "skipLibCheck": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "strict": true,
    },
    "include": [
        "server/**/*",
        "controllers/**/*",
    ],
    "compileOnSave": true
}